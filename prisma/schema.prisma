// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  slug        String
  username    String
  description String
  price       Int
  category    String
  subCategory String
  phone       String
  country     String
  state       String
  city        String?
  images      Image[]
  tags        Tag[]
  offers      Offer[]

  @@unique([title, username])
  @@unique([slug])
}

model Image {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  username     String
  productTitle String
  product      Product? @relation(fields: [productId], references: [id])
  productId    Int?
  name         String
  url          String
}

model Tag {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  username     String
  productTitle String
  product      Product? @relation(fields: [productId], references: [id])
  productId    Int?
  name         String

  @@unique([name, productId])
}

model Offer {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  username     String
  productTitle String
  productOwner String
  product      Product?    @relation(fields: [productId], references: [id])
  productId    Int?
  status       OfferStatus @default(PENDING)

  @@unique([username, productId])
}

enum OfferStatus {
  PENDING
  ACCEPTED
  REJECTED
}
